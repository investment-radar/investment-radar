<div style="text-align:center">
  <h1>简单-Simplicity 一致-Consistency 纪律-Discipline</h1>
</div>


<p>
  Current User: <%= current_user.email %>
</p>

<p>
  The time is now: <%= Time.now %>
</p>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>
<h2>Market News</h2>
<% @market_news.each do |news| %>
  <p><%= news["datetime"].strftime('%Y-%m-%d %I:%M%p') %> | <%= news["source"] %> |<a href="<%= news["url"] %>"><%= news["headline"] %></a></p>
<% end %>

<h2>Stocks News</h2>
<% @stocks_news.each do |news| %>
  <p><%= news["datetime"].strftime('%Y-%m-%d %I:%M%p') %> | <%= news["source"] %> |<a href="<%= news["url"] %>"><%= news["headline"] %></a></p>
<% end %>
